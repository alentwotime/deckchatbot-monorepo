{
  "name": "deckchatbot",
  "version": "1.0.0",
  "type": "module",
  "description": "Magic: The Gathering Deck Chatbot with Azure Integration",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "backend:dev": "cd apps/backend && npm run dev",
    "frontend:dev": "cd apps/frontend && npm run start",
    "install:all": "npm install && cd apps/backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/uuid": "^9.0.7",
    "eslint": "^9.29.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.0.1",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/openai": "^1.0.0-beta.8",
    "@azure/storage-blob": "^12.17.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.0.0",
    "helmet": "^7.1.0",
    "lint": "^1.1.2",
    "rate-limiter-flexible": "^3.0.6",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
