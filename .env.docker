# ==================== APPLICATION SETTINGS ====================
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3000

# ==================== CORS CONFIGURATION ====================
CORS_ORIGIN=http://localhost:3000

# ==================== FILE UPLOAD SETTINGS ====================
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
MAX_FILES_PER_UPLOAD=10

# ==================== SECURITY SETTINGS ====================
# Default values for Docker development - DO NOT USE IN PRODUCTION
SESSION_SECRET=docker-dev-session-secret
JWT_SECRET=docker-dev-jwt-secret
ENCRYPTION_KEY=docker-dev-encryption-key-32chars

# ==================== AI SERVICE CONFIGURATION ====================
AI_SERVICE_URL=http://ai-service:8000
AI_PROVIDER=ollama
OLLAMA_MODEL_NAME=llava-deckbot

# ==================== DATABASE CONFIGURATION ====================
# SQLite database for Docker development
DATABASE_URL=sqlite:///./docker.db

# ==================== AZURE CONFIGURATION ====================
# Dummy value for development
AZURE_AI_KEY=dummy-azure-ai-key-for-docker-dev

# ==================== OPTIONAL SETTINGS ====================
# These are set to dummy values to avoid Docker warnings when using Ollama
# These keys are not actually used when AI_PROVIDER=ollama
HF_API_TOKEN=dummy-huggingface-token-for-development
HUGGING_FACE_API_KEY=dummy-huggingface-token-for-development
OPENAI_API_KEY=sk-dummy-openai-key-not-used-with-ollama
OPENAI_ADMIN_API_KEY=sk-dummy-admin-key-not-used-with-ollama
