# Production Environment Configuration
NODE_ENV=production
ENVIRONMENT=production
DOMAIN=AlensDeckBot.online

# Frontend Configuration
REACT_APP_API_BASE_URL=https://AlensDeckBot.online/api
REACT_APP_AI_SERVICE_URL=https://AlensDeckBot.online/ai

# Backend Configuration
FRONTEND_URL=https://AlensDeckBot.online
AI_SERVICE_URL=https://AlensDeckBot.online/ai

# AI Provider Configuration
# Set AI_PROVIDER to 'ollama' to use a local model, or 'openai' to use the OpenAI API.
AI_PROVIDER=ollama

# Ollama Configuration
# The name of the model to use with Ollama.
OLLAMA_MODEL_NAME=llava-deckbot
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Configuration
# Your OpenAI API key. Required if AI_PROVIDER is set to 'openai'.
OPENAI_API_KEY=

# Hugging Face token for Difix
HF_API_TOKEN=

# Database Configuration (if using external database)
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=your_password
# PGDATABASE=deckchatbot

# Security Configuration
SESSION_SECRET=your-secure-session-secret-change-in-production
DATA_ENCRYPTION_KEY=your-encryption-key-change-in-production

# Cache Configuration
# REDIS_URL=redis://localhost:6379
