# ==================== AZURE OPENAI (PRIMARY SERVICE) ====================
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_MAX_TOKENS=4000
AZURE_OPENAI_TEMPERATURE=0.7

# ==================== AZURE COSMOS DB ====================
AZURE_COSMOSDB_ENDPOINT=https://deckchatbot-cosmos.documents.azure.com:443/
AZURE_COSMOSDB_KEY=your-cosmos-key
AZURE_COSMOSDB_DATABASE_ID=deckchatbot
AZURE_COSMOSDB_CHATS_CONTAINER=chats
AZURE_COSMOSDB_SESSIONS_CONTAINER=sessions
AZURE_COSMOSDB_DECKS_CONTAINER=decks

# ==================== AZURE STORAGE ====================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_DECKS_CONTAINER=decks
AZURE_STORAGE_UPLOADS_CONTAINER=uploads
AZURE_STORAGE_EXPORTS_CONTAINER=exports

# ==================== AZURE COMPUTER VISION (NEW) ====================
AZURE_COMPUTER_VISION_ENDPOINT=https://your-cv-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_API_KEY=your-cv-key

# ==================== AZURE CONFIGURATION ====================
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP_NAME=your-resource-group-name
AZURE_REGION=East US
AZURE_DOMAIN=AlensDeckBot.online

# Azure Service Principal (for deployment automation)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# ==================== APPLICATION SETTINGS ====================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# ==================== CORS CONFIGURATION ====================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ==================== FILE UPLOAD SETTINGS (NEW) ====================
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
MAX_FILES_PER_UPLOAD=10

# ==================== PRODUCTION SETTINGS ====================
# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CA_PATH=/path/to/ssl/ca.pem

# Domain Configuration
DOMAIN_NAME=alensdeckbot.online
SUBDOMAIN=www

# Security Settings
SESSION_SECRET=your-secure-session-secret
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/deckchatbot/app.log

# ==================== LEGACY/OPTIONAL SETTINGS ====================
# Base URL for the AI service (no route)
AI_SERVICE_URL=http://localhost:8001
REACT_APP_API_BASE_URL=http://localhost:8000

# Hugging Face API token for Difix
HF_API_TOKEN=your-hugging-face-token

# OpenAI Configuration (fallback)
OPENAI_API_KEY=your-openai-api-key
